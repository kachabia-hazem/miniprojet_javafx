<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<VBox fx:id="cardBox" alignment="CENTER" spacing="10"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.controllers.ProductCardController"
      style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);"
      maxWidth="200">

    <ImageView fx:id="productImage" fitWidth="150" fitHeight="150" preserveRatio="true" />

    <Label fx:id="productName" style="-fx-font-weight: bold; -fx-font-size: 14;" />

    <Label fx:id="productPrice" style="-fx-text-fill: #e67e22; -fx-font-size: 16;" />

    <Label fx:id="productCategory" style="-fx-font-size: 12; -fx-text-fill: #666;" />

    <!-- Bouton Commander avec compteur de quantitÃ© -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="orderButton" text="Commander" onAction="#incrementQuantity"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; 
                       -fx-font-size: 12px; -fx-background-radius: 5;" />
                       
        <Label fx:id="quantityLabel" text="0"
               style="-fx-background-color: #f1c40f; -fx-text-fill: #34495e; 
                      -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-radius: 5;" />
    </HBox>
</VBox>