<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="800.0" prefHeight="500.0" style="-fx-background-color: #f7f7f7;">
    <VBox spacing="20" layoutX="30" layoutY="30" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
        
        <!-- Titre -->
        <Label text="Gestion du menu" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3e2723; -fx-font-family: 'Arial';" />
        
        <!-- Bouton Ajouter un produit -->
        <Button text="Ajouter un produit" fx:id="addProductButton" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5; -fx-padding: 10 20;" />

        <!-- Table des produits -->
        <TableView fx:id="productsTable" prefHeight="300" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, #888, 10, 0, 0, 5);">
            <columns>
                <!-- Colonne Nom -->
                <TableColumn text="Nom" prefWidth="120" style="-fx-font-size: 14px; -fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #5f6368;"/>
                
                <!-- Colonne Catégorie -->
                <TableColumn text="Catégorie" prefWidth="150" style="-fx-font-size: 14px; -fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #5f6368;"/>
                
                <!-- Colonne Prix -->
                <TableColumn text="Prix" prefWidth="120" style="-fx-font-size: 14px; -fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #5f6368;"/>
                
                <!-- Colonne Actions -->
                <TableColumn text="Actions" prefWidth="100" style="-fx-font-size: 14px; -fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #5f6368;"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
